<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <!-- MessagePack v3.x doesn't support netstandard2.0 -->
    <TargetFrameworks>net6.0;net7.0;net8.0;net9.0</TargetFrameworks>
    <GeneratePackageOnBuild>false</GeneratePackageOnBuild>
    <PackageId>HeroMessaging.Serialization.MessagePack</PackageId>
    <PackageVersion>1.0.0</PackageVersion>
    <Authors>HeroMessaging</Authors>
    <Description>MessagePack serialization support for HeroMessaging</Description>
    <PackageTags>messaging;serialization;messagepack</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\HeroMessaging.Abstractions\HeroMessaging.Abstractions.csproj" />
    <ProjectReference Include="..\HeroMessaging.Core\HeroMessaging.Core.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="MessagePack" Version="3.0.300" />
  </ItemGroup>

</Project>
